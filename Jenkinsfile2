pipeline {
    agent any
    
    stages {
        
        stage('ansible') {
            steps {
                dir('ansible') {
                  sh 'ansible all -m ping -i hosts.ini'
                  
                  ansiblePlaybook become: true, credentialsId: 'masternodeid', installation: 'ansible', inventory: 'hosts.ini', playbook: 'deploy-playbook.yml'
                }
            }
        }

    }
}
